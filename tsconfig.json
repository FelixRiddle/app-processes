{
	"compilerOptions": {
		"target": "ES2016",
		"moduleResolution": "node",
		"module": "ESNext",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"types": ["jest"],
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
